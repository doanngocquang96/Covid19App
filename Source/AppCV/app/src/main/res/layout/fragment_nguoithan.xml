<?xml version="1.0" encoding="utf-8"?>
    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <EditText
            android:inputType="text"
            android:id="@+id/edttxt_hoten"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="25dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="25dp"
            android:imeOptions="actionDone"
            android:hint="Nhập họ tên người thân"
            android:minHeight="48dp" />

        <EditText
            android:inputType="text"
            android:id="@+id/edttxt_quanhe"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="25dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="60dp"
            android:imeOptions="actionDone"
            android:hint="Nhập mối quan hệ"
            android:minHeight="48dp" />

        <LinearLayout
            android:layout_marginTop="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingStart="25dp"
            android:paddingEnd="25dp">

            <CheckBox
                android:id="@+id/cb_sot"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginStart="2dp"
                android:layout_marginEnd="2dp"
                android:layout_weight="1"
                android:background="#F1EEEE"
                android:text="Sốt"
                android:textSize="15sp" />

            <CheckBox
                android:id="@+id/cb_ho"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginStart="2dp"
                android:layout_marginEnd="2dp"
                android:layout_weight="1"
                android:background="#F1EEEE"
                android:text="Ho"
                android:textSize="15sp" />

            <CheckBox
                android:id="@+id/cb_khotho"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginStart="2dp"
                android:layout_marginEnd="2dp"
                android:layout_weight="1"
                android:background="#F1EEEE"
                android:text="Khó thở"
                android:textSize="15sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:orientation="horizontal"
            android:paddingStart="25dp"
            android:paddingEnd="25dp">

            <CheckBox
                android:id="@+id/cb_daunguoi"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginStart="2dp"
                android:layout_marginEnd="2dp"
                android:layout_weight="1"
                android:background="#F1EEEE"
                android:text="Đau người, mệt mỏi"
                android:textSize="15sp" />

            <CheckBox
                android:id="@+id/cb_suckhoetot"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginStart="2dp"
                android:layout_marginEnd="2dp"
                android:layout_weight="1"
                android:background="#F1EEEE"
                android:text="Sức khỏe tốt"
                android:textSize="15sp" />


        </LinearLayout>

        <Button
            android:id="@+id/btn_guiboyte"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginStart="25dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="25dp"
            android:layout_marginBottom="8dp"
            android:text="Lưu trạng thái sức khỏe"
            style="@style/Widget.AppCompat.Button.Colored"
            android:theme="@style/ButtonTheme"
            android:textColor="@color/white"
            android:textSize="15sp" />


    </LinearLayout>



    </ScrollView>



