<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:bottom="0dp"
        android:left="0dp"
        android:right="0dp"
        android:top="0dp">
        <shape android:shape="rectangle">
            <gradient
                android:angle="0"
                android:centerColor="@color/color_title"
                android:endColor="@color/color_title"
                android:radius="21dp"
                android:startColor="@color/color_title"
                android:type="linear" />
            <padding
                android:bottom="14dp"
                android:left="14dp"
                android:right="14dp"
                android:top="14dp" />
            <stroke
                android:width="1dp"
                android:color="#ffffff" />
            <corners
                android:bottomLeftRadius="20dp"
                android:bottomRightRadius="20dp"
                android:topLeftRadius="20dp"
                android:topRightRadius="20dp" />

        </shape>
    </item>
</layer-list>